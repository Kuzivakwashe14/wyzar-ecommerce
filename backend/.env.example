# Backend Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/wyzar_ecommerce?schema=public"

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=5000
HTTPS_PORT=5443
USE_HTTPS=false
REDIRECT_HTTP=false
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Paynow Payment Gateway
PAYNOW_INTEGRATION_ID=your_id
PAYNOW_INTEGRATION_KEY=your_key
PAYNOW_RETURN_URL=http://localhost:3000/payment/return
PAYNOW_RESULT_URL=http://localhost:5000/api/orders/paynow/callback

# Email Service (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@wyzar.com

# SMS Service (AfricasTalking)
AT_API_KEY=your_africastalking_api_key
AT_USERNAME=your_africastalking_username

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES=5
